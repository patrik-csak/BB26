    "test:coverage": "del-cli coverage && eslint && prettier --check . && sort-package-json --check && c8 ava"
  },
  "dependencies": {
    "ow": "^3.1.1",
    "random-int": "^3.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@sindresorhus/tsconfig": "^8.1.0",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "del-cli": "^7.0.0",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.0.0",
    "typescript": "^5.0.2",
    "xo": "^1.2.1"
  },
  "engines": {
    "node": ">=20 <=24"
  }
